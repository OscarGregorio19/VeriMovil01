<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/actividad_registrar"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".ui.ActividadRegistro"
    android:background="#38383e"
    android:backgroundTintMode="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/tab2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Informacion de usuario"
                android:textSize="18sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt1"
                android:layout_above="@+id/nombre"
                android:gravity="center"
                android:textStyle="bold"/>

            <EditText
                android:drawableLeft="@drawable/lapiz"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:hint="Nombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/apellido"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nombre"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:drawableLeft="@drawable/lapiz"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:hint="Apellido"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/numlicencia"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/apellido"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:drawableLeft="@drawable/lapiz"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:hint="Numero de licencia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/email"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/numlicencia"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:drawableLeft="@drawable/lapiz"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:hint="Correo Electonico"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt2"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txt2"
                android:textSize="18sp"
                android:text="Informacion de acceso"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/regUsuario"
                android:gravity="center"
                android:textStyle="bold"/>

            <EditText
                android:drawableLeft="@drawable/user"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:hint="Nombre de usuario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/regPassword"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/regUsuario"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:drawableLeft="@drawable/pass"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:hint="Contraseña"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/registro"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/regPassword"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:drawableLeft="@drawable/pass"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:hint="Contraseña"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/registro"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/confirmarRegPassword"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:text="Registrar"
                android:background="@color/primaryColor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registro"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

        </LinearLayout>

        </ScrollView>

    </LinearLayout>
