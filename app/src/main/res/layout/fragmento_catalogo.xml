<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_catalogo">

    <Spinner
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/marcas_spinner"
        android:layout_marginTop="57dp"
        android:spinnerMode="dialog"
        android:layout_marginEnd="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Marca:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark"
        android:layout_marginEnd="33dp"
        android:layout_alignBottom="@+id/marcas_spinner"
        android:layout_toStartOf="@+id/marcas_spinner" />

    <TextView
        android:text="Modelo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="40dp"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/modelo_spinner"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/marcas_spinner" />

    <TextView
        android:text="Version:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="40dp"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/version_spinner"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/modelo_spinner" />

    <TextView
        android:text="AÃ±o:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="40dp"
        android:id="@+id/textView7"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/anio_spinner"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/version_spinner" />


</RelativeLayout>